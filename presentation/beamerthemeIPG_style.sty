%\usetheme{CambridgeUS}
\usetheme{Copenhagen}
\usecolortheme{beaver}
% remove title color
\setbeamercolor{titlelike}{parent=structure}

% define colors
\definecolor{foreground}{RGB}{0,0,0}
\definecolor{background}{RGB}{255,255,255}
\definecolor{pagenb}{RGB}{200,200,200}
\definecolor{bostonuniversityred}{rgb}{0.8, 0.0, 0.0}

\setbeamercolor{normal text}{fg=foreground,bg=background}

% command shortcuts
\newcommand{\bi}{\begin{itemize}}
\newcommand{\ei}{\end{itemize}}
\newcommand{\ig}{\includegraphics}

%\expandafter\def\expandafter\insertshorttitle\expandafter{%
%  \insertshorttitle\hfill%
%  \insertframenumber\,/\,\inserttotalframenumber}


\setbeamertemplate{footline}{%
	\raisebox{5pt}{
		\makebox[\paperwidth]{\hfill
			\makebox[30pt]{\color{pagenb}
				\scriptsize\insertframenumber/{}\inserttotalframenumber
			}
		}
	}
	\hspace*{5pt}
}

\setbeamertemplate{itemize item}{
	\scriptsize\raise1.25pt\hbox{
		\donotcoloroutermaths$\blacktriangleright$
	}
}

\setbeamertemplate{section in toc}{
	\usebeamercolor[fg]{itemize item}%
	\hbox{
	\raisebox{1.25pt}{
		\donotcoloroutermaths$\mathsmaller{\blacktriangleright}$
	}
	\usebeamercolor[fg]{normal text}%
	\parbox[t]{\dimexpr\linewidth-2em}{\inserttocsection}%
	}

}

